{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "^@iep/database(|/.*)$": "<rootDir>/../../../libs/database/src/$1",
        "^@iep/queue(|/.*)$": "<rootDir>/../../../libs/queue/src/$1",
        "^@iep/rendering(|/.*)$": "<rootDir>/../../../libs/rendering/src/$1",
        "^@iep/providers(|/.*)$": "<rootDir>/../../../libs/providers/src/$1",
        "^@iep/common(|/.*)$": "<rootDir>/../../../libs/common/src/$1"
    }
}