# ──────────────────────────────────────
# Application
# ──────────────────────────────────────
NODE_ENV=development
API_PORT=3000
WORKER_PORT=3001

# ──────────────────────────────────────
# PostgreSQL
# ──────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=iep
DB_PASSWORD=iep_secret
DB_NAME=iep
DATABASE_URL=postgresql://iep:iep_secret@localhost:5432/iep?schema=public

# ──────────────────────────────────────
# RabbitMQ
# ──────────────────────────────────────
RABBITMQ_URL=amqp://iep:iep_secret@localhost:5672
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672
RABBITMQ_USER=iep
RABBITMQ_PASSWORD=iep_secret

# ──────────────────────────────────────
# Redis
# ──────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=iep_secret

# ──────────────────────────────────────
# SMTP (for development — use MailHog or Mailtrap)
# ──────────────────────────────────────
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=

# ──────────────────────────────────────
# MinIO / S3 (Attachments)
# ──────────────────────────────────────
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=iep-attachments
S3_REGION=us-east-1

# ──────────────────────────────────────
# Rate Limiting
# ──────────────────────────────────────
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_WINDOW_SECONDS=60

# ──────────────────────────────────────
# Logging
# ──────────────────────────────────────
LOG_LEVEL=debug
