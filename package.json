{
    "name": "iep",
    "version": "1.0.0",
    "description": "Internal Email Platform â€” Production-Grade NestJS Monorepo",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "build:api": "nest build mail-api",
        "build:worker": "nest build mail-worker",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start:dev:api": "nest start mail-api --watch",
        "start:dev:worker": "nest start mail-worker --watch",
        "start:debug:api": "nest start mail-api --debug --watch",
        "start:prod:api": "node dist/apps/mail-api/main",
        "start:prod:worker": "node dist/apps/mail-worker/main",
        "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:e2e:api": "jest --config apps/mail-api/test/jest-e2e.json",
        "db:generate": "prisma generate --schema=libs/database/prisma/schema.prisma",
        "db:migrate:dev": "prisma migrate dev --schema=libs/database/prisma/schema.prisma",
        "db:migrate:deploy": "prisma migrate deploy --schema=libs/database/prisma/schema.prisma",
        "db:studio": "prisma studio --schema=libs/database/prisma/schema.prisma",
        "db:seed": "ts-node scripts/seed-tenant.ts",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down"
    },
    "dependencies": {
        "@nestjs/common": "^11.0.0",
        "@nestjs/config": "^4.0.0",
        "@nestjs/core": "^11.0.0",
        "@nestjs/platform-express": "^11.0.0",
        "@nestjs/swagger": "^11.0.0",
        "@nestjs/terminus": "^11.0.0",
        "@prisma/client": "^6.4.0",
        "amqplib": "^0.10.5",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "handlebars": "^4.7.8",
        "helmet": "^8.0.0",
        "ioredis": "^5.4.2",
        "joi": "^17.13.3",
        "nestjs-pino": "^4.2.0",
        "nodemailer": "^6.9.16",
        "pino-http": "^10.4.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.0",
        "@types/amqplib": "^0.10.6",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.0",
        "@types/nodemailer": "^6.4.17",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "eslint": "^9.0.0",
        "eslint-config-prettier": "^10.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.7.0",
        "pino-pretty": "^13.0.0",
        "prettier": "^3.4.0",
        "prisma": "^6.4.0",
        "rimraf": "^6.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.0",
        "ts-loader": "^9.5.0",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/",
            "<rootDir>/libs/"
        ],
        "moduleNameMapper": {
            "^@iep/database(|/.*)$": "<rootDir>/libs/database/src/$1",
            "^@iep/queue(|/.*)$": "<rootDir>/libs/queue/src/$1",
            "^@iep/rendering(|/.*)$": "<rootDir>/libs/rendering/src/$1",
            "^@iep/providers(|/.*)$": "<rootDir>/libs/providers/src/$1",
            "^@iep/common(|/.*)$": "<rootDir>/libs/common/src/$1"
        }
    }
}